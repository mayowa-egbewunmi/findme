<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="com.yarata.ysell.payment.Payment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/payment">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        card_view:cardCornerRadius="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/payment_banner"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Bill"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#787878"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#2,340.00"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_below="@id/bill"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#222"
                android:textSize="60dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbb"
                android:layout_below="@+id/amount"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table 7"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_below="@+id/divider"
                android:layout_alignLeft="@+id/divider"
                android:textStyle="bold"
                android:textColor="#787878"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tableGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group 1"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:layout_below="@+id/table"
                android:layout_alignLeft="@+id/table"
                android:textStyle="bold"
                android:textColor="#787878"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_below="@+id/divider"
                android:layout_alignRight="@+id/divider"
                android:textStyle="bold"
                android:textColor="#787878"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/17"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:layout_below="@+id/_date"
                android:layout_alignRight="@+id/_date"
                android:textStyle="bold"
                android:textColor="#787878"
                android:textSize="12dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/confirmPayment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="Confirm Payment"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:background="@color/ThemePink"
        android:textColor="@android:color/white"/>

</LinearLayout>