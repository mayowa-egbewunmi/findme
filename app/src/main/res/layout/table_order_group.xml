<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FCE4EC"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:background="#344"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_height="35dp"
                android:text="Group A"
                android:gravity="left|center_vertical"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_height="35dp"
                android:text="#2,500"
                android:gravity="left|center_vertical"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="12dp" />

        </LinearLayout>

        <android.support.v7.widget.GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:grid="http://schemas.android.com/apk/res-auto"
            android:id="@+id/order_table_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:background="#FCE4EC"
            grid:alignmentMode="alignBounds"
            grid:columnCount="2"
            grid:rowOrderPreserved="false"
            grid:useDefaultMargins="false">

        </android.support.v7.widget.GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/ThemeLightPink"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:onClick="onClickPayment"
                android:text="MAKE PAYMENT"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/ThemePink"/>

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:onClick="onClickAddItem"
                android:text="ADD ITEM"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>