<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rotimi.finder">

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.found.FoundActivity"
            android:label="@string/title_activity_found"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".main.myreports.CreateMyReport"
            android:label="@string/create_report"
            android:theme="@style/MyMaterialTheme" />

        <activity
            android:name=".main.sightings.SightingActivity"
            android:label="@string/title_activity_sighting"
            android:theme="@style/MyMaterialTheme"
            ></activity>
        <activity android:name=".main.ReportDetails"
            android:label="@string/title_activity_my_report_details"
            android:theme="@style/MyMaterialTheme">

        </activity>
    </application>

</manifest>